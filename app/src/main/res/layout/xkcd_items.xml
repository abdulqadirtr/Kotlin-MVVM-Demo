<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="xkcdModelName"
            type="com.example.demoarchitectcomponent.XkcdModel" />
    </data>
<LinearLayout
    android:layout_height="60dp"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/xkcd_item_id"
        android:textSize="24sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:text="Comic Books"
        app:xkcd_name="@{xkcdModelName}"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/xkcd_item_name"
        android:textSize="24sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginHorizontal="5dp"
        tools:text="Comic Books"
        app:xkcd_link="@{xkcdModelName}"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/xkcd_item_url"
        android:textSize="24sp"
        tools:text="Comic Books"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/ic_launcher_background"
        android:layout_width="35dp"
        android:layout_height="35dp" />
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ccc"/>

</LinearLayout>

</layout>